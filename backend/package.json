{
  "name": "groove-backend",
  "version": "1.0.0",
  "description": "Backend API for Groove Chrome Extension",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "db:seed": "tsx scripts/seed.ts",
    "docker:build": "docker build -t gemini-nano-flow-backend .",
    "docker:run": "docker run -p 3000:3000 --env-file .env gemini-nano-flow-backend"
  },
  "dependencies": {
    "@fastify/cookie": "^9.2.0",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/jwt": "^8.0.0",
    "@fastify/oauth2": "^7.8.0",
    "@fastify/rate-limit": "^9.1.0",
    "@lemonsqueezy/lemonsqueezy.js": "^3.2.0",
    "@react-email/components": "^1.0.6",
    "@sentry/node": "^7.91.0",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "fastify": "^4.25.2",
    "ioredis": "^5.3.2",
    "mongoose": "^8.0.4",
    "nanoid": "^5.0.4",
    "posthog-node": "^3.6.0",
    "react": "^19.2.3",
    "react-email": "^5.2.5",
    "resend": "^4.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.56.0",
    "mongodb-memory-server": "^11.0.1",
    "msw": "^2.12.7",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
